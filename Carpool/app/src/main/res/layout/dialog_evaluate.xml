<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="370dp">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="320dp"
        android:layout_height="419dp"
        android:scaleType="fitCenter"
        android:src="@drawable/img_dialog_evaluate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:background="#00000000"
        android:lineSpacingMultiplier="1.2"
        android:paddingStart="24dp"
        android:paddingTop="12dp"
        android:text="@string/dialog_evaluate_text"
        android:textColor="#545454"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <ImageView
        android:id="@+id/iv_dialog_evaluate_sw"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/img_shiwang2"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.302" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="失望"
        android:textColor="#545454"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_dialog_evaluate_sw"
        app:layout_constraintStart_toStartOf="@+id/iv_dialog_evaluate_sw"
        app:layout_constraintTop_toBottomOf="@+id/iv_dialog_evaluate_sw" />

    <ImageView
        android:id="@+id/iv_dialog_evaluate_my"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/img_manyi"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintBottom_toBottomOf="@+id/iv_dialog_evaluate_sw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_dialog_evaluate_sw" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="满意"
        android:layout_marginTop="8dp"
        android:textColor="#444444"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_dialog_evaluate_my"
        app:layout_constraintStart_toStartOf="@+id/iv_dialog_evaluate_my"
        app:layout_constraintTop_toBottomOf="@+id/iv_dialog_evaluate_my" />

</android.support.constraint.ConstraintLayout>