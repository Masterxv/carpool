<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/c_60dp"
    android:background="@drawable/dialog_load"
    android:paddingTop="@dimen/c_16dp"
    android:paddingBottom="@dimen/c_10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/c_iv_dialog_load"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/c_25dp"
        android:layout_gravity="center"
        android:background="@null"
        android:scaleType="fitStart" />

    <TextView
        android:layout_width="@dimen/c_70dp"
        android:layout_height="wrap_content"
        android:text="登录中..."
        android:gravity="center"
        android:textSize="@dimen/c_11dp"
        android:layout_marginTop="@dimen/c_5dp"
        android:layout_gravity="center"
        android:textColor="#ffffff"/>
</LinearLayout>