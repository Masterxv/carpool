<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="@dimen/c_5dp"
    android:paddingBottom="@dimen/c_5dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/c_14dp"
        android:layout_height="@dimen/c_14dp"
        android:layout_marginStart="@dimen/c_55dp"
        android:src="@drawable/positioning_32"
        app:layout_constraintBottom_toBottomOf="@+id/item_child_departure"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_child_departure"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/item_child_departure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/c_8dp"
        android:text="重庆邮电大学"
        android:textColor="#333333"
        android:maxWidth="@dimen/c_100dp"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/c_5dp"
        android:textSize="@dimen/c_13dp"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:src="@drawable/ic_jiantou_apply2"
        android:id="@+id/recommend_arrow_view"
        android:layout_width="@dimen/c_18dp"
        android:layout_height="@dimen/c_8dp"
        android:layout_marginStart="@dimen/c_8dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_child_departure"
        app:layout_constraintStart_toEndOf="@+id/item_child_departure"
        app:layout_constraintTop_toTopOf="@+id/item_child_departure"
        />

    <TextView
        android:id="@+id/item_child_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/c_8dp"
        android:ellipsize="end"
        android:maxLength="10"
        android:maxLines="1"
        android:singleLine="true"
        android:text="大学城"
        android:textColor="#333333"
        android:textSize="@dimen/c_13dp"
        android:maxWidth="@dimen/c_100dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_child_departure"
        app:layout_constraintStart_toEndOf="@+id/recommend_arrow_view"
        app:layout_constraintTop_toTopOf="@+id/item_child_departure" />

    <TextView
        android:id="@+id/item_child_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/c_4dp"
        android:text="今天 13:25"
        android:textAllCaps="false"
        android:textColor="#666666"
        android:textSize="@dimen/c_12dp"
        app:layout_constraintStart_toStartOf="@+id/item_child_departure"
        app:layout_constraintTop_toBottomOf="@+id/item_child_departure" />

    <View
        android:layout_width="@dimen/c_290dp"
        android:layout_height="0.8dp"
        android:background="#ECECEC"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>