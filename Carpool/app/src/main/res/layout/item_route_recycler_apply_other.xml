<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/c_55dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/route_recycler_apply_other_image"
        android:layout_width="@dimen/c_30dp"
        android:layout_height="@dimen/c_30dp"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_vertical"
        android:src="@drawable/meizi7" />

    <TextView
        android:id="@+id/route_recycler_apply_other_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/c_30dp"
        android:layout_marginEnd="@dimen/c_20dp"
        android:gravity="center_vertical"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/c_15dp"
        android:text=" "
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toStartOf="@+id/route_recycler_apply_other_tv_cho"
        android:layout_toEndOf="@+id/route_recycler_apply_other_image"
        android:textColor="#000000"
        android:textSize="@dimen/c_14dp" />

    <TextView
        android:id="@+id/route_recycler_apply_other_tv_cho"
        android:layout_width="@dimen/c_50dp"
        android:layout_height="@dimen/c_22dp"
        android:background="@drawable/route_leader_button"
        android:gravity="center"
        android:text="选我"
        android:clickable="true"
        android:layout_marginEnd="@dimen/c_18dp"
        android:paddingTop="@dimen/c_2dp"
        android:paddingBottom="@dimen/c_2dp"
        android:textColor="#000000"
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/c_14dp" />

    <View
        android:id="@+id/route_recycler_apply_other_sex_v"
        android:layout_width="@dimen/c_4dp"
        android:layout_height="@dimen/c_4dp"
        android:background="@drawable/route_oval_blue"
        android:layout_alignTop="@id/route_recycler_apply_other_image"
        android:layout_alignEnd="@id/route_recycler_apply_other_image"/>

</RelativeLayout>