<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/c_8dp"
    android:paddingBottom="@dimen/c_8dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_item_chat_left_voice_a"
        android:layout_width="@dimen/c_34dp"
        android:layout_height="@dimen/c_34dp"
        android:src="@drawable/ic_voice"
        android:scaleType="centerCrop"
        android:layout_marginStart="@dimen/c_14dp"/>

    <ImageView
        android:id="@+id/iv_item_chat_left_voice"
        android:layout_width="@dimen/c_160dp"
        android:layout_height="@dimen/c_40dp"
        android:background="@drawable/tv_chat_shadow"
        android:layout_marginEnd="@dimen/c_80dp"
        android:layout_marginStart="@dimen/c_14dp"/>

</LinearLayout>