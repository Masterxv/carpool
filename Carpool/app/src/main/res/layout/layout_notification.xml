<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_notification"
        android:layout_width="@dimen/c_26dp"
        android:layout_height="@dimen/c_26dp"
        android:layout_marginStart="@dimen/c_6dp"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/tv_notification_title"
        android:layout_width="@dimen/c_220dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_notification"
        android:layout_alignBottom="@id/iv_notification"
        android:layout_marginBottom="@dimen/c_15dp"
        android:layout_marginStart="@dimen/c_14dp"
        android:textSize="@dimen/c_13dp"
        android:gravity="left"
        android:textStyle="bold"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="#242424"/>


    <TextView
        android:id="@+id/tv_notification_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginEnd="@dimen/c_8dp"
        android:layout_alignStart="@id/tv_notification_title"
        android:layout_alignTop="@+id/tv_notification_title"
        android:layout_marginTop="@dimen/c_22dp"
        android:textColor="#848484"
        android:textSize="@dimen/c_12dp"/>

    <TextView
        android:id="@+id/tv_notification_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/c_11dp"
        android:textColor="#A0A0A0"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/c_6dp"
        android:layout_alignTop="@id/tv_notification_title" />

</RelativeLayout>