<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/c_8dp"
    android:paddingBottom="@dimen/c_8dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_item_chat_left_account"
        android:layout_width="@dimen/c_34dp"
        android:layout_height="@dimen/c_34dp"
        android:src="@drawable/ic_voice"
        android:scaleType="centerCrop"
        android:layout_marginStart="@dimen/c_14dp"/>

    <TextView
        android:id="@+id/tv_item_chat_left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:textSize="@dimen/c_14dp"
        android:maxWidth="@dimen/c_220dp"
        android:lineSpacingMultiplier ="1.1"
        android:textColor="#000000"
        android:paddingTop="@dimen/c_10dp"
        android:paddingBottom="@dimen/c_10dp"
        android:paddingStart="@dimen/c_10dp"
        android:paddingEnd="@dimen/c_10dp"
        android:background="@drawable/tv_chat_shadow"
        android:layout_marginStart="@dimen/c_14dp"/>

</LinearLayout>