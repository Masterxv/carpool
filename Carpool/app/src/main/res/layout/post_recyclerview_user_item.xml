<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/c_122dp"
    android:layout_margin="@dimen/c_10dp"
    android:background="#ffffff">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/post_route_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:text="重亲邮电大学"
            android:textColor="#333333"
            android:textSize="@dimen/c_15dp"
            app:layout_constraintBottom_toBottomOf="@+id/post_right"
            app:layout_constraintEnd_toStartOf="@+id/post_right"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/post_right" />

        <ImageView
            android:id="@+id/post_right"
            android:layout_width="@dimen/c_20dp"
            android:layout_height="@dimen/c_15dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/c_18dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/post_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/post_route_end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/c_10dp"
            android:layout_marginEnd="8dp"
            android:text="南坪"
            android:textColor="#333333"
            app:layout_constraintHorizontal_bias="0.1"
            android:textSize="@dimen/c_15dp"
            android:paddingEnd="@dimen/c_5dp"
            android:singleLine="true"
            android:ellipsize="end"
            app:layout_constraintBottom_toBottomOf="@+id/post_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/post_right"
            app:layout_constraintTop_toTopOf="@+id/post_right" />


        <ImageView
            android:id="@+id/post_clock"
            android:layout_width="@dimen/c_20dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/post_clock"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.042"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/post_right" />

        <TextView
            android:id="@+id/post_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/c_10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="2019年3月18日 11: 00"
            android:textColor="#666666"
            android:textSize="@dimen/c_14dp"
            app:layout_constraintBottom_toTopOf="@+id/post_user"
            app:layout_constraintStart_toEndOf="@id/post_clock"
            app:layout_constraintTop_toTopOf="@+id/post_clock" />

        <ImageView
            android:id="@+id/post_user"
            android:layout_width="@dimen/c_20dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/c_1dp"
            android:src="@drawable/post_user"
            app:layout_constraintEnd_toEndOf="@+id/post_clock"
            app:layout_constraintStart_toStartOf="@+id/post_clock"
            app:layout_constraintTop_toBottomOf="@id/post_clock" />

        <TextView
            android:id="@+id/post_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/c_10dp"
            android:gravity="center"
            android:text="kiteWhere"
            android:textColor="#666666"
            android:textSize="@dimen/c_13dp"
            app:layout_constraintBottom_toBottomOf="@+id/post_user"
            app:layout_constraintStart_toEndOf="@id/post_user"
            app:layout_constraintTop_toTopOf="@+id/post_user" />

        <Button
            android:id="@+id/post_join"
            android:layout_width="@dimen/c_80dp"
            android:layout_height="@dimen/c_28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/c_10dp"
            android:layout_marginEnd="@dimen/c_10dp"
            android:text="立即交流"
            android:textSize="@dimen/c_15dp"
            android:textColor="#ffffff"
            android:background="@drawable/post_button_enable_true"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>

