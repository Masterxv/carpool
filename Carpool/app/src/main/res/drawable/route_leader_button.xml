<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="false">
        <shape >
            <!-- 设置圆角半径  还可分别详细设置上下左右4个圆角-->
            <corners android:radius="@dimen/c_3dp"/>
            <!-- 内部颜色  -->
            <solid android:color="#ffffff"/>
            <!-- 边框宽度 边框颜色 -->
            <stroke android:width="1dp" android:color="#f4b712"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape >
            <!-- 设置圆角半径  还可分别详细设置上下左右4个圆角-->
            <corners android:radius="@dimen/c_2dp"/>
            <!-- 内部颜色  -->
            <solid android:color="#E7E6E6"/>
            <!-- 边框宽度 边框颜色 -->
            <stroke android:width="1dp" android:color="#D69E04"/>
        </shape>
    </item>
</selector>